@page
@model MoneyPlus.Pages.Wallets.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<p>
</p>

<div>
    <h4>Wallet</h4>
    <hr />
    <dl class="row">
      
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wallet.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wallet.Name)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wallet.Balance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wallet.Balance)
        </dd>
    </dl>
</div>

<h4>TRANSACTIONS</h4>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Wallet)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Payee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transaction)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Wallet.ID)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @(item.Type == 0 ? @"Add Money" : "Add Expense") 
                    @*  @Html.DisplayFor(modelItem => item.Type) *@
                </td>
                <td>
                    <a asp-page="../Transactions/Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="../Transactions/Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="../Transactions/Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />

<h4>TRANSFERS</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transfer[0].OriginWallet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transfer[0].DestinationWallet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transfer[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transfer[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transfer[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transfer)
        {
            <tr>
               <td>
                    @Html.DisplayFor(modelItem => item.OriginWallet.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DestinationWallet.Name)
                </td>
                <td>
                    @(item.OriginWallet.ID == Model.Wallet.ID ? @"-" : "+") @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



<div>
    <a asp-page="./Edit" asp-route-id="@Model.Wallet?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
