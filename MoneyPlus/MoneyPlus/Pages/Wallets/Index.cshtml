<table class="table">
    <thead>
        <tr>
           @* <th>
                @Html.DisplayNameFor(model => model.Wallet[0].User)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Wallet[0].Name)
            </th>
