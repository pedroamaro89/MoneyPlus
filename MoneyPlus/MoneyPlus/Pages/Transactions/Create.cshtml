@page
@model MoneyPlus.Pages.Transactions.CreateModel


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />

<br />

<h5>@Html.DisplayFor(model => model.Type):</h5>
<br />
<div class="row">
    <div class="col-md-4">
        
             <dl class="row">
            <h6>WALLET</h6>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Wallet.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Wallet.Name)
                </dd>
                <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Wallet.Balance)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Wallet.Balance)
                </dd>
             </dl>   
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Category</label>
                <select asp-for="Transaction.CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                <span asp-validation-for="Transaction.CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">SubCategory</label>
                <select asp-for="Transaction.SubCategoryID" class="form-control" asp-items="ViewBag.SubCategoryID"></select>
                <span asp-validation-for="Transaction.SubCategoryID" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Transaction.PayeeId" class="control-label"></label>
                <select asp-for="Transaction.PayeeId" class="form-control" asp-items="ViewBag.PayeeId"></select>
                <span asp-validation-for="Transaction.PayeeId" class="text-danger"></span> <a asp-page="/Payees/Create">  Add Payee</a>
               
            </div>
            <div class="form-group">
                <label class="control-label">Assets</label>
                <select asp-for="Transaction.AssetId" class="form-control" asp-items="ViewBag.AssetId">
                    <option value="0">--Select Asset--</option>
                </select>
                <span asp-validation-for="Transaction.AssetId" class="text-danger"></span>
            </div>
           

            <div class="form-group">
                <label asp-for="Transaction.Date" class="control-label"></label>
                <input asp-for="Transaction.Date" class="form-control" />
                <span asp-validation-for="Transaction.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Description" class="control-label"></label>
                <input asp-for="Transaction.Description" class="form-control" />
                <span asp-validation-for="Transaction.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Amount" class="control-label"></label>
                <input asp-for="Transaction.Amount" class="form-control" />
                <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
