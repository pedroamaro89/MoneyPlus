@page
@model MoneyPlus.Pages.Transactions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Wallet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Wallet.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Category.Name)
        </dd>
          <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.SubCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.SubCategory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Payee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Payee.Name)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Asset)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Asset.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Type)
        </dt>
        <dd class="col-sm-10">
            @(Model.Type == 0 ? @"Add Money" : "Add Expense")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Transaction?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
