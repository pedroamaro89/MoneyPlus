@page
@model MoneyPlus.Pages.Transfers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Transfer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transfer.ID" />
            <div class="form-group">
                <label asp-for="Transfer.OriginWalletID" class="control-label"></label>
                <select asp-for="Transfer.OriginWalletID" class="form-control" asp-items="ViewBag.OriginWalletID"></select>
                <span asp-validation-for="Transfer.OriginWalletID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transfer.DestinationWalletID" class="control-label"></label>
                <select asp-for="Transfer.DestinationWalletID" class="form-control" asp-items="ViewBag.DestinationWalletID"></select>
                <span asp-validation-for="Transfer.DestinationWalletID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transfer.Amount" class="control-label"></label>
                <input asp-for="Transfer.Amount" class="form-control" />
                <span asp-validation-for="Transfer.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transfer.Date" class="control-label"></label>
                <input asp-for="Transfer.Date" class="form-control" />
                <span asp-validation-for="Transfer.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transfer.Description" class="control-label"></label>
                <input asp-for="Transfer.Description" class="form-control" />
                <span asp-validation-for="Transfer.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
